<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Site</h1>

  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data">

      <div class="mb-3">
        <label class="form-label" for="name">Facility name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="campground[name]"
          required>  
        <div class="valid-feedback">Looks good!</div>
      </div> 
    
      <div class="mb-3">
        <label class="form-label" for="province">Province</label>
        <input
          class="form-control"
          type="text"
          id="province"
          name="campground[province]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="district">District</label>
        <input
          class="form-control"
          type="text"
          id="district"
          name="campground[district]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>

   
      <div class="mb-3">
        <label class="form-label" for="facility_type">Facility Type</label>
        <input
          class="form-control"
          type="text"
          id="facility_type"
          name="campground[facility_type]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="bed_size">Bed Size</label>
        <input
          class="form-control"
          type="number"
          id="bed_size"
          name="campground[bed_size]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="hf_code">HF Code (HMIS)</label>
        <input
          class="form-control"
          type="text"
          id="hf_code"
          name="campground[hf_code]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>


      <div class="mb-3">
        <label class="form-label" for="opd">OPD attendance (av.month)</label>
        <input
          class="form-control"
          type="number"
          id="opd"
          name="campground[opd]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
     
      <div class="mb-3">
        <label class="form-label" for="em">Accidents and Emergencies (A&E)</label>
        <input
          class="form-control"
          type="number"
          id="em"
          name="campground[em]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="ipdadmis">IPD Admissions (av.month)</label>
        <input
          class="form-control"
          type="number"
          id="ipdadmis"
          name="campground[ipdadmis]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="ipdlos">IPD av. Length of Stay (dys)</label>
        <input
          class="form-control"
          type="number"
          id="ipdlos"
          name="campground[ipdlos]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="surgmin">Minor Surgeries (av.month)</label>
        <input
          class="form-control"
          type="number"
          id="surgmin"
          name="campground[surgmin]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="surgmaj">Major Surgeries (av.month)</label>
        <input
          class="form-control"
          type="number"
          id="surgmaj"
          name="campground[surgmaj]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="referral">Referrals (av.month)</label>
        <input
          class="form-control"
          type="number"
          id="referral"
          name="campground[referral]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>





      <div class="mb-3">
        <label class="form-label" for="location">Location (district, province)</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>


      <p><em>for averages per month, take the average over 6 months, or more of the most recent data available</em></p>

      <hr>
      <br>
      <div class="mb-3">
        <div class="form-file custom-file">  <label class="form-label" for="image">Images</label>
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple/>
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label">Choose Images</span>
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>

      <hr>
      <br>

      <div class="mb-3">
        <button class="btn btn-success">Add this Site</button>
      </div>
    </form>


    

    <a href="/campgrounds">Back to All sites</a>
  </div>
</div>
